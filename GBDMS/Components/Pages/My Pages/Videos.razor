@page "/videos"

<div class="container-fluid p-0">
    <div class="page-header bg-white shadow-sm text-center p-4 mb-4">
        <h1 class="mb-2">Gilgit Baltistan Disaster Management System</h1>
        <p class="text-medium mb-0">Gilgit-Baltistan, Pakistan</p>
    </div>

    <div class="section-header forest-green-bg text-light text-center py-4 mb-4">
        <h2 class="mb-0">SURVIVAL GUIDELINES</h2>
    </div>

    <main class="container py-4">
        <div class="row g-4">
            @foreach (var video in new[]
            {
            new { VideoUrl = "https://www.youtube.com/embed/3m2qQY7yQYU", Title = "Survival in a Landslide" },
            new { VideoUrl = "https://www.youtube.com/embed/rV1iqRD9EKY", Title = "Flood Survival Guidelines" },
            new { VideoUrl = "https://www.youtube.com/embed/BDPbtP-0AW8", Title = "Flood Survival: A Glimpse" },
            new { VideoUrl = "https://www.youtube.com/embed/r5EbbrVXoQw", Title = "Earthquake Survival Tips" },
            new { VideoUrl = "https://www.youtube.com/embed/RnCCqHOiX5Q", Title = "Avalanche Survival Guidelines" },
            new { VideoUrl = "https://www.youtube.com/embed/ypbPzX5eQss", Title = "How to Survive Forest Fire" },
            new { VideoUrl = "https://www.youtube.com/embed/h8HPzyZPyL0", Title = "How to Survive Heavy Snowfall" },
            new { VideoUrl = "https://www.youtube.com/embed/cNNcinKe55o", Title = "How to Survive Heavy Wind" }
            })
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <iframe class="card-img-top" src="@video.VideoUrl" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        <div class="card-body">
                            <h5 class="card-title">@video.Title</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</div>

<style>
    .forest-green-bg {
        background-color: #228B22; /* Forest Green color */
    }
</style>
