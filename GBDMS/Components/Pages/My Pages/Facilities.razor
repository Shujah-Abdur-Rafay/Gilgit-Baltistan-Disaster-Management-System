@page "/test"

<title>Disaster Management System</title>

<header class="header">
    <h1>Disaster Management System</h1>
    <p>Gilgit-Baltistan, Pakistan</p>
</header>

<nav class="nav-buttons text-center my-3">
    <button class="btn btn-outline-dark me-2">Weather Data</button>
    <button class="btn btn-outline-dark">Current Weather</button>
</nav>

<main class="container my-4">
    <div class="row g-4">
        @foreach (var card in Cards)
        {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <NavLink class="text-decoration-none" href="@card.Route">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@card.Img" class="card-img-top" alt="@card.Title">
                            <div class="card-body text-center">
                                <p class="card-text text-dark fw-bold">@card.Title</p>
                            </div>
                        </div>
                    </NavLink>
                </div>
        }
    </div>
</main>

